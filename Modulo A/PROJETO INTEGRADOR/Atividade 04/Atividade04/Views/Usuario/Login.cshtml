@model Usuario
@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

<form method="POST" asp-action="Login" class="px-4 py-3">

    <div class="mb-3">
        <label asp-for="Login" class="form-label">Login</label>
        <input class="form-control" asp-for="Login" required placeholder="Insira o login">
    </div>
    <div class="mb-3">
        <label asp-for="Senha" class="form-label">Senha</label>
        <input type="password" class="form-control" asp-for="Senha" required placeholder="Insira a senha">
    </div>
    <div class="mb-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input">
            <label class="form-check-label">
                Lembrar o meu login
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" value="Entrar">Sign in</button>
</form>

<p>
    @ViewBag.Mensagem
</p>